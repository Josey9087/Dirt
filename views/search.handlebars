<!-- Search Bar -->
<section class="search-bar-section">
    <div>
        <form id="search-form">
            <input id="search-input" type="text" name="text" class="search" placeholder="Search For a Plant!">
            <input type="submit" name="submit" class="submit">
        </form>
    </div>
</section>
<div class="row card-section">
{{#each plants}}
<div class="col-4">
<div class="card-deck">
    <div class="cards-container">
        <div class="card mb-3">
            <img src="{{url}}" class="card-img-top" alt="{{name}}">
            <div class="card-body">
                <h5 class="card-title" data-plant-id={{this.id}}>{{name}}</h5>
                <p class="card-text">{{scientific_name}}</p>
                <p class="card-text"><small class="text-muted"></small></p>
            <div class="card-footer">
                    <button class="btn details"><a href="/plant/{{id}}">Details</a></button>
                    <button class="btn btn-outline">Save to Wishlist</button>
            </div>
            </div>
        </div>
    </div>
</div>
</div>
{{/each}}
</div>

<div class="" id="paginate-div">
    <button id="prev-button">Prev</button>
    <button id="next-button">Next</button> 
</div>


<script src="/js/search.js"></script>

<!-- renders a single post with its image, title, desc, and comments -->
<div id="post">
    <div class="card mb-3 post-card-section">
        <img src="{{this.url}}" class="card-img-top" alt="{{this.title}}">
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.body}}</p>
            <p class="card-text"><small class="text-muted">{{format_date this.created_at}}</small></p>
        </div>
    </div>
</div>

<div class="header-div">
    <h3 class="comment-header">Comments</h3>
</div>

<div id="add-comment">
    <form id="comment-form">
        <div class="mb-3"> 
            <textarea class="form-control" id="comment-input" post-id={{this.id}} placeholder="Add comment..."></textarea>
        </div>
    </form>
</div>

<div class="submit-section">
    <button type="submit" class="btn wide-button" id="comment-button">Post</button>
</div>

    <div class="comment-section">
        {{#each comments}}
        <div class="comment-div">
            <div class="card mb-3" id="comment">
                <div class="card-header">
                    <p>{{this.username}}</p>
                    <p>{{format_date this.created_at}}</p>
                </div>
                <div class="card-body">
                    <p class="card-text">{{this.body}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

<script src="/js/comment.js"></script>